<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimension20dp"
            android:elevation="@dimen/dimension20dp"
            card_view:cardCornerRadius="@dimen/dimension10dp">

            <LinearLayout
                android:id="@+id/linearTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimension20dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name*"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputPhNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edContactNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="Contact number*"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="Email Id"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:hint="Store name*"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:inputType="text"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edLicense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Store license no"
                        android:imeOptions="actionNext"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edReg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Store registration no"
                        android:imeOptions="actionNext"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputTan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edTan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Store TAN no"
                        android:imeOptions="actionNext"
                        android:inputType="textVisiblePassword"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputMinQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edMinQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minimum quantity"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimension2dp"
                    android:padding="@dimen/dimension2dp"
                    app:hintAnimationEnabled="true"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/edAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Store address*"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLines="3"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/colorBlack" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimension40dp"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimaryLight"
                    android:paddingLeft="@dimen/dimension4dp"
                    android:paddingRight="@dimen/dimension4dp"
                    android:text="Fetch current location"
                    android:layout_marginLeft="@dimen/dimension5dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimension10dp"
            android:background="@color/colorPrimaryDark"
            android:text="REGISTER"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>