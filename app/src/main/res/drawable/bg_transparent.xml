<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item android:right="@dimen/dimension2dp" android:top="@dimen/dimension1dp"
                android:left="@dimen/dimension2dp">
                <shape>
                    <corners android:radius="@dimen/dimension5dp" />
                    <solid android:color="@color/colorBlackAlpha" />
                </shape>
            </item>

            <item android:bottom="@dimen/dimension2dp" android:right="@dimen/dimension1dp"
                android:left="@dimen/dimension1dp">
                <shape>
                    <solid android:color="@color/colorWhiteTransparent" />
                    <stroke android:width="@dimen/dimension1dp" android:color="@color/colorWhiteTransparent" />
                    <corners android:radius="@dimen/dimension5dp" />
                    <padding android:bottom="@dimen/dimension0.5dp" android:left="@dimen/dimension3dp"
                        android:right="@dimen/dimension3dp" android:top="@dimen/dimension0.5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>


